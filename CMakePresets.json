{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_COLOR_DIAGNOSTICS": "ON"
      },
      "environment": {
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with full symbols",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "-g -O0"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with optimizations",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "description": "Release build with debug symbols",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "configurePreset": "debug",
      "jobs": 4
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "configurePreset": "release",
      "jobs": 4
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo Build",
      "configurePreset": "relwithdebinfo",
      "jobs": 4
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "displayName": "Debug Tests",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "environment": {
        "QT_QPA_PLATFORM": "offscreen",
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu"
      }
    },
    {
      "name": "release",
      "displayName": "Release Tests",
      "configurePreset": "release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "environment": {
        "QT_QPA_PLATFORM": "offscreen",
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu"
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "displayName": "Debug Workflow",
      "description": "Configure, build, and test in debug mode",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release",
      "displayName": "Release Workflow",
      "description": "Configure, build, and test in release mode",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "test",
          "name": "release"
        }
      ]
    }
  ]
}
